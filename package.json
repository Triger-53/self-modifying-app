{
  "name": "self-modifying-app",
  "private": true,
  "version": "0.0.0",
  "description": "A self-modifying app",
  "author": "User",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on -i 50 tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.example.selfmodifyingapp",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio.",
        "NSCameraUsageDescription": "This app needs access to your camera for video recording."
      }
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/@google/**/*",
      "node_modules/@babel/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@babel/standalone": "^7.28.5",
    "@google/generative-ai": "^0.24.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  }
}
